#define CONSOLE_API Environment.Runtime == "Runtime" ? "Console" : "OS"

class BuildLogger
{
	const Tag;
	function BuildLogger(tag!)
	{
		Tag = tag;
	}
	function Log(msg!)
	{
		$(CONSOLE_API).WriteLine($"[{Tag}:LOG] {msg}");
	}

	function Warn(msg!)
	{
		$(CONSOLE_API).WriteLine($"[{Tag}:WARN] {msg}");
	}

	function Error(msg!)
	{
		$(CONSOLE_API).WriteLine($"[{Tag}:ERR] {msg}");
	}
}
